{
  "name": "markdown-blog",
  "version": "1.0.0",
  "description": "Markdown Blog",
  "author": "Streamlet",
  "main": "main.js",
  "build": {
    "appId": "MarkdownBlog",
    "artifactName": "${name}-${os}.${ext}",
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "format": "UDBZ"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "tar.xz"
    }
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0"
  }
}
