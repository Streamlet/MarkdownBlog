{
  "name": "markdown-blog",
  "productName": "MarkdownBlog",
  "version": "1.0.0",
  "description": "Markdown Blog",
  "author": "Streamlet",
  "main": "build/main/index.bundle.js",
  "build": {
    "appId": "org.streamlet.markdown_blog",
    "artifactName": "${name}-${os}.${ext}",
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "format": "UDBZ"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "tar.xz"
    }
  },
  "scripts": {
    "build": "webpack --config webpack.config.ts",
    "start": "electron .",
    "dist:dir": "NODE_ENV=production webpack --config webpack.config.ts && electron-builder --dir --publish=never",
    "dist": "NODE_ENV=production webpack --config webpack.config.ts && electron-builder --publish=never"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@types/webpack": "^4.41.22",
    "css-loader": "^4.3.0",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@types/markdown-it": "^10.0.2",
    "markdown-it": "^11.0.1",
    "metaweblog-api": "^1.2.0"
  }
}